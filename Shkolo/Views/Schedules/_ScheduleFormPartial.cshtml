@model ScheduleFormModel

<div class="row">
    <div class="col-md-8 col-sm-12 offset-md-2">
        <form method="post">
            <div class="form-group">
                <label asp-for="Term_Number">Term_Number</label>
                <input asp-for="Term_Number" class="form-control" placeholder="1 or 2...">
                <span asp-validation-for="Term_Number" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek">DayOfWeek</label>
                <input asp-for="DayOfWeek" class="form-control" placeholder="1 ..5 ">
                <span asp-validation-for="DayOfWeek" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolHour">SchoolHour</label>
                <input asp-for="SchoolHour" class="form-control" placeholder="1..5 ">
                <span asp-validation-for="SchoolHour" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromTime">FromTime</label>
                <input asp-for="FromTime" class="form-control" placeholder="xx:xx:xx">
                <span asp-validation-for="FromTime" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToTime">ToTime</label>
                <input asp-for="ToTime" class="form-control" placeholder="xx:xx:xx">
                <span asp-validation-for="ToTime" class="small text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group">
                    <label asp-for="CourseId"></label>
                    <select asp-for="CourseId" class="form-control">
                        @foreach (var course in Model.SchCourses)
                        {
                            <option value=@course.CourseId>@course.SubjectName - @course.TeacherName - @course.TypeSubjectName</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="small text-danger"></span>
                </div>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>

