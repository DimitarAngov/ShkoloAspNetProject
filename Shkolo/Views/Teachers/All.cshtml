@model IEnumerable<TeacherFormModel>

@{ViewData["Title"] = "All Teachers";}

<h2 class="display-4">Teachers : </h2>
<div class="row border-info">
    <table class="table">
        <thead class="badge-info">
            <tr>
                <th scope="col">TeacherId</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        @foreach (var tch in Model)
        {
            <tbody>
                <tr>
                    <td>@tch.TeacherId</td>
                    <td>@tch.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Teachers",
                             new { id = tch.TeacherId},
                             new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Teachers",
                             new { id = tch.TeacherId },
                             new { @class = "btn btn-danger", onclick = "alert('This Row Will be Deleted');" })
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
