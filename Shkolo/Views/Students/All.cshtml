@model IEnumerable<AllStudentViewModel>

@{ViewData["Title"] = "All Students";}

<h2 class="display-4">Students : </h2>
<div class="row">

    <table class="table">
        <thead class="badge-info">
            <tr>
                <th scope="col">NumInClass</th>
                <th scope="col">Name</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">PlaceOfBirth</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        @foreach (var st in Model)
        {
            <tbody>
                <tr>
                    <td>@st.NumInClass</td>
                    <td>@st.Name</td>
                    <td>@st.DateOfBirth</td>
                    <td>@st.PlaceOfBirth</td>
                    <td>@st.Address</td>
                    <td>@st.Phone</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Students",
                         new { id = st.StudentId },
                         new { @class = "btn btn-success"})
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Students",
                         new { id = st.StudentId },
                         new { @class = "btn btn-danger", onclick = "alert('This Row Will be Deleted');" })
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>



