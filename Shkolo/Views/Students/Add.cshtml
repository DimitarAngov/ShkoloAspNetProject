@model AddStudentFormModel

@{ViewData["Title"] = "Add Students";}


    <h2 class="text-center">Add Students</h2>
    <div class="row">
        <div class="col-md-8 col-sm-12 offset-md-2">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="First Surname LastName">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth">DateOfBirth</label>
                    <input asp-for="DateOfBirth" class="form-control" placeholder="Year-Month-Day">
                    <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlaceOfBirth">PlaceOfBirth</label>
                    <input asp-for="PlaceOfBirth" class="form-control" placeholder="City...">
                    <span asp-validation-for="PlaceOfBirth" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Address...">
                    <span asp-validation-for="Address" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="+359xxxxxxxxx">
                    <span asp-validation-for="Phone" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumInClass">NumInClass</label>
                    <input asp-for="NumInClass" class="form-control" placeholder="NumInClass...">
                    <span asp-validation-for="NumInClass" class="small text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="DiaryId"></label>
                        <select asp-for="DiaryId" class="form-control">
                            @foreach (var diary in Model.SDiaries)
                            {
                                <option value=@diary.DiaryId>@diary.NumberClassName - @diary.ClassName</option>        
                            }
                        </select>
                        <span asp-validation-for="DiaryId" class="small text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="ParentId"></label>
                        <select asp-for="ParentId" class="form-control">
                            @foreach (var parent in Model.SParents)
                            {
                                <option value=@parent.ParentId>@parent.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ParentId" class="small text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="DoctorId"></label>
                        <select asp-for="DoctorId" class="form-control">
                            @foreach (var doctor in Model.SDoctors)
                            {
                                <option value=@doctor.DoctorId>@doctor.Name</option>
                            }
                            
                        </select>
                            <span asp-validation-for="DoctorId" class="small text-danger"></span>
                    </div>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Save" />
            </form>

        </div>

    </div>


